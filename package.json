{
  "private": true,
  "name": "mppack",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/hufeng/wxpacker.git",
  "author": "hufeng <hufeng@qianmi.com>",
  "description": "小程序界的webpack -  mpapp webpack",
  "license": "MIT",
  "scripts": {
    "test": "npx jest --verbose"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "notify": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "typescript": "3.2.1"
  },
  "devDependencies": {
    "@types/node": "10.12.12",
    "@types/gulp": "4.0.5",
    "@types/jest": "23.3.10",
    "jest": "23.6.0",
    "babel-jest": "23.6.0",
    "ts-jest": "23.10.5"
  }
}
